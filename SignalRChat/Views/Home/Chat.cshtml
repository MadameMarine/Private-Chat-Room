@{
    ViewBag.Title = "Chat";
}
    <head>
        <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css">
    </head>
    <body>
        <img src="https://www.compositeurdigital.com/wp/wp-content/uploads/2019/06/Logo-wordmark.png" id="logo">
        <div class="container">
            <div class="col-lg-6">

                <div class="DataSession">
                    <h1 id="text_GroupName">@Model.Id</h1>
                    <h2 id="text_UserNameDisplay"></h2>
                </div>

                <div class="UserData">
                    <input type="text" id="textBox_UserName" />
                    <br />
                    <input type="button" id="Button_JoinGroup" value="Join Private Group" />
                    <br />
                </div>

                <ul id="text_MessageConnecting">Connecting...</ul>             
                <ul id="text_Connection"></ul>
                <ul id="text_MessageSessionClosed">No Activity in Progress</ul>

                <div class="UserMessage">
                    <input type="text" id="textBox_Message" />
                    <br />
                    <input type="button" id="Button_Sendmessage" value="Send" />
                    <br />
                </div>

                <ul id="text_MessageSending">Sending...</ul>

                @*<input type="hidden" id="displayname" /> TODO : A EFFACER SI TOUT FONCTIONNE*@

            </div>
        </div>
    </body>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Hide message box and send button-->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#text_MessageSending').hide();
            $('#text_MessageConnecting').hide();
            $('#text_UserNameDisplay').hide();
            $('#text_GroupName').show();
            $('#textBox_Message').hide();
            $('#Button_Sendmessage').hide();
            $('#text_MessageSessionClosed').hide();
        });
    </script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var textBox_UserName = '';
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;

            //Send Message to App1
             $('#Button_Sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.sendNote('@Model.Id', $('#textBox_UserName').val(), $('#textBox_Message').val());
                    // Clear text box and reset focus for next comment.
                    $('#textBox_Message').val('').focus();
             });

            //Join Session
            $('#Button_JoinGroup').click(function () {
                //$('#Button_JoinGroup').prop('disabled', true);
                //$('#textBox_UserName').prop('disabled', true);

                $('#Button_JoinGroup').hide();
                $('#textBox_UserName').hide();

                //Display UserName when user join group
                $('#text_UserNameDisplay').append($('#textBox_UserName').val());
                $('#text_UserNameDisplay').show();

                //Alert user when joining session
                //$('text_MessageConnecting').show();

               
                chat.server.joinSession('@Model.Id').done(function (session) {
                    console.log('user connected to session  @Model.Id');

                    //Read data in dictionary
                    var currentActivity = session.CurrentActivity;
                    console.log("joinsession return = " + currentActivity);

                    //User is connected 
                    $('text_MessageConnecting').hide();


                    //If currentActivity has changed : display notes
                    if (currentActivity != null && currentActivity != "closed") {
                        handleStartingActivity(currentActivity);
                    }
                    else {
                        handleStoppingActivity(currentActivity);
                    }

                    // Set initial focus to message input box.
                    $('#textBox_Message').focus();
                });            
               
                //Display in App1 when user is connected
                //Pas nécessaire pour l'instant car pas de post-it
                chat.server.sendNote('@Model.Id', $('#textBox_UserName').val(), "connected");

                //Display message connection on web page
                $('#Button_Sendmessage').append('You are connected to @Model.Id  group');
            });


            chat.client.startingActivity = handleStartingActivity;
            chat.client.stoppingActivity = handleStoppingActivity;

            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (message) {
                console.log( message.Name + ' ' + message.Message);
                $('#discussion').append('<li><strong>' + htmlEncode(message.Name) + '</strong>: ' + htmlEncode(message.Message) + '</li>');
            };


            function handleStartingActivity(newActivity) {
                console.log('startActivity :' + newActivity); 

                if (newActivity == 'TakingNotes') {
                    //$('#textmessage').show();
                    $('#textBox_Message').show();
                    $('#Button_Sendmessage').show();

                    $('#text_MessageSessionClosed').hide();
                }
            }   

            function handleStoppingActivity(newActivity) {
                console.log('stopping activity = ' + newActivity);

                 if (newActivity == 'closed') {
                    //$('#textmessage').hide();
                    $('#textBox_Message').hide();
                    $('#Button_Sendmessage').hide();

                    $('#text_MessageSessionClosed').show();
                }
            }
                                          
            //go!
            console.log('Starting signalR connection...');
            $.connection.hub.start().done(function () {

            });
        });

        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}